{
  "version": "1.0",
  "mcp_name": "Austrian Law MCP",
  "description": "Golden contract tests for Austrian Law MCP against RIS-OGD data (5,099 laws, 54,727 provisions)",
  "tests": [
    {
      "id": "at-001",
      "category": "provision_retrieval",
      "description": "Retrieve § 1 of ABGB (Allgemeines bürgerliches Gesetzbuch)",
      "tool": "get_provision",
      "input": { "document_id": "gesetz-10001622", "provision_ref": "para1" },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["results"]
      }
    },
    {
      "id": "at-002",
      "category": "provision_retrieval",
      "description": "Retrieve § 1 of ASVG (Allgemeines Sozialversicherungsgesetz)",
      "tool": "get_provision",
      "input": { "document_id": "gesetz-10008147", "provision_ref": "para1" },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["results"]
      }
    },
    {
      "id": "at-003",
      "category": "search",
      "description": "Search for 'Sicherheit' across Austrian statutes",
      "tool": "search_legislation",
      "input": { "query": "Sicherheit", "limit": 5 },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["results"],
        "min_results": 1
      }
    },
    {
      "id": "at-004",
      "category": "search",
      "description": "Search for 'Recht' across Austrian statutes",
      "tool": "search_legislation",
      "input": { "query": "Recht", "limit": 5 },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["results"],
        "min_results": 1
      }
    },
    {
      "id": "at-005",
      "category": "citation_validation",
      "description": "Validate citation for § 1 ABGB",
      "tool": "validate_citation",
      "input": { "citation": "§ 1, Allgemeines bürgerliches Gesetzbuch" },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["results"]
      }
    },
    {
      "id": "at-006",
      "category": "citation_formatting",
      "description": "Format citation for § 1 ABGB in short format",
      "tool": "format_citation",
      "input": { "citation": "§ 1, Allgemeines bürgerliches Gesetzbuch", "format": "short" },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["results"]
      }
    },
    {
      "id": "at-007",
      "category": "provision_retrieval",
      "description": "Check currency of ABGB (gesetz-10001622)",
      "tool": "check_currency",
      "input": { "document_id": "gesetz-10001622" },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["results"]
      }
    },
    {
      "id": "at-008",
      "category": "negative_test",
      "description": "Non-existent document returns gracefully",
      "tool": "get_provision",
      "input": { "document_id": "nonexistent-doc-99999", "provision_ref": "para1" },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "at-009",
      "category": "negative_test",
      "description": "Empty search query returns empty array",
      "tool": "search_legislation",
      "input": { "query": "" },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "at-010",
      "category": "eu_cross_reference",
      "description": "Get EU basis for ABGB (may return empty, should handle gracefully)",
      "tool": "get_eu_basis",
      "input": { "document_id": "gesetz-10001622" },
      "assertions": {
        "handles_gracefully": true,
        "fields_present": ["results"]
      }
    },
    {
      "id": "at-011",
      "category": "search",
      "description": "Search for 'Bundesabgabenordnung' across Austrian statutes",
      "tool": "search_legislation",
      "input": { "query": "Bundesabgabenordnung", "limit": 5 },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["results"],
        "min_results": 1
      }
    },
    {
      "id": "at-012",
      "category": "provision_retrieval",
      "description": "Retrieve § 1 of Bundesabgabenordnung",
      "tool": "get_provision",
      "input": { "document_id": "gesetz-10003940", "provision_ref": "para1" },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["results"]
      }
    }
  ]
}
